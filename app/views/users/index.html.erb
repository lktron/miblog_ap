<html>
<head>
	<title>Prueba Ruby in Rails</title>
</head>
<body>

<h1>Listado de usuarios</h1>

<% flash.each do |key, value| %>
<div><%= value %></div>
<% end %>

<table>
	<tr>
		<td>Nombre</td>
		<td>Email</td>
	</tr>
	<% @usuarios.each do |usuario| %>
	<tr>
		<td><%= link_to usuario.nombre, usuario  %></td>
		<td><%= usuario.email  %></td>
		<td> <%= link_to "Editar" , edit_user_path(usuario) %></td>
		<td> <%= link_to "Eliminar",usuario, method: :delete, confirm: "Estas seguro?" %></td>
	</tr>
	<% end %>
	<% if @usuarios.size==0 %>
		USUARIOS NO ENCONTRADOS
	<% end %>
</table>

<%= link_to 'Nuevo usuario', new_user_path %>
<%= link_to 'Registrar', '/signup' %>

</body>
</html>